<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_chat"
        android:layout_width="@dimen/icon_contact"
        android:layout_height="@dimen/icon_contact"
        android:layout_marginRight="@dimen/padding_mini"
        android:layout_weight="1"
        android:src="@drawable/ic_chat_white" />

    <ImageView
        android:id="@+id/item_voice"
        android:layout_width="@dimen/icon_contact"
        android:layout_height="@dimen/icon_contact"
        android:layout_marginRight="@dimen/padding_mini"
        android:layout_weight="1"
        android:src="@drawable/ic_voice_white" />

    <ImageView
        android:id="@+id/item_video"
        android:layout_width="@dimen/icon_contact"
        android:layout_height="@dimen/icon_contact"
        android:layout_marginRight="@dimen/padding_mini"
        android:layout_weight="1"
        android:src="@drawable/ic_video_white" />

</LinearLayout>
