<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/ehr_TextStyle.Title.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/medication_name" />

            <TextView
                android:id="@+id/txtDrugName"
                style="@style/ehr_TextStyle.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/ehr_TextStyle.Title.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/quantity_unit"/>

            <TextView
                android:id="@+id/txtUnit"
                style="@style/ehr_TextStyle.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/ehr_TextStyle.Title.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/how_to_eat"/>

            <TextView
                android:id="@+id/txtHowTo"
                style="@style/ehr_TextStyle.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnBuyMedication"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_cart_green"
        android:visibility="invisible"/>

</RelativeLayout>
