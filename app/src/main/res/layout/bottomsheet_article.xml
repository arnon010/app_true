<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_normal"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_null_rounded_white"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:tint="@color/color_gray_light"
                app:srcCompat="@drawable/ic_write_black_24dp" />

            <TextView
                style="@style/TextStyle.Title.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="@string/article_doctor_bottom_write"/>
        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/layout_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_normal"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_null_rounded_white"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:tint="@color/color_gray_light"
                app:srcCompat="@drawable/ic_upload_clip_black_24dp" />

            <TextView
                style="@style/TextStyle.Title.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="@string/article_doctor_bottom_upload_clip"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>