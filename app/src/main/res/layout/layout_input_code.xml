<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_mini"
    android:background="@drawable/rounded_over_shape_white_border_green">

    <EditText
        android:id="@+id/edtCode"
        style="@style/TextStyle.EditText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:hint="@string/coupons_code_hint"
        android:maxLength="20"
        android:paddingLeft="@dimen/padding_small" />

    <LinearLayout
        android:id="@+id/btnDone"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/rounded_over_shape_right_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDone"
            style="@style/TextStyle.Title.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/button_confirm"/>

    </LinearLayout>

</LinearLayout>