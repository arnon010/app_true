<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog_rounder"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_xxxlarge"
        android:paddingTop="@dimen/padding_xxxlarge">

        <TextView
            android:id="@+id/txtMessage"
            style="@style/ehr_TextStyle.Title.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edtInput"
            style="@style/ehr_EditTextStyle.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:hint="@string/dialog_input_name"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/btnConfirm"
            style="@style/ehr_TextStyle.Heading.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_large"
            android:paddingTop="@dimen/padding_large"
            android:text="@string/button_confirm" />


    </LinearLayout>

</LinearLayout>
