<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_mini"
    android:paddingBottom="@dimen/padding_mini"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewDayOfMonth"
        android:layout_width="@dimen/height_normal"
        android:layout_height="@dimen/height_normal"
        android:background="@drawable/circle_white_selector"
        android:gravity="center"
        android:textColor="@color/color_text_green_white_selector"
        android:textSize="@dimen/text_small" />
    <ImageView
        android:id="@+id/img_open_slot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:tint="@color/color_white"
        android:src="@drawable/ic_notification"
        android:visibility="invisible"/>

</LinearLayout>