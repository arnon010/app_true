<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_mini">

    <ImageView
        android:id="@+id/img_channel"
        android:layout_width="@dimen/image_channel"
        android:layout_height="@dimen/image_channel"
        android:src="@drawable/selector_channel_chat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextStyle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_button_unselect"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/consult_video"
            android:textColor="@color/color_gray_reverse" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextStyle.Title.Sub.Reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mockup_doctor_price"
        android:textColor="@color/color_gray_reverse"
        android:textSize="@dimen/text_mini" />

</LinearLayout>
