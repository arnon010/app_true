<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_dialog_rounder"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_xxxlarge"
                android:paddingTop="@dimen/padding_xxxlarge">

                <TextView
                    android:id="@+id/txtMessage"
                    style="@style/TextStyle.Title.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:gravity="center"
                    android:text="@string/dialog_delivery_title"/>

                <EditText
                    android:id="@+id/edtName"
                    style="@style/TextStyle.EditText.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/name_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nestedScrollingEnabled="false"
                    android:scrollHorizontally="true" />

                <EditText
                    android:id="@+id/edtLastName"
                    style="@style/TextStyle.EditText.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/last_name_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nestedScrollingEnabled="false"
                    android:scrollHorizontally="true" />

                <EditText
                    android:id="@+id/edtAddress"
                    style="@style/TextStyle.EditText.Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:gravity="top"
                    android:hint="@string/delivery_address_hint"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/btnConfirm"
                    style="@style/TextStyle.Title.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:paddingTop="@dimen/padding_large"
                    android:text="@string/button_confirm"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>
