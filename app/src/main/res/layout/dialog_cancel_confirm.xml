<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/background_dialog_rounder">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextStyle.Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:text="@string/appointment_cancel_dialog_title"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appointment_cancel_dialog_no" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/appointment_cancel_dialog_ok" />
    </LinearLayout>

</RelativeLayout>
